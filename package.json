{
  "name": "weather-app",
  "version": "2.0.0",
  "description": "Modern weather application with dynamic backgrounds, forecasts, and favorites system",
  "homepage": "https://florinfire80.github.io/WeatherApp",
  "scripts": {
    "start": "parcel serve src/index.html --open",
    "clean": "node -e \"const fs=require('fs');const del=p=>{try{if(fs.existsSync(p))fs.rmSync(p,{recursive:true,force:true});}catch(e){console.warn('Skip delete',p,e.code||e.message);} };del('dist');del('.parcel-cache');\"",
    "build": "npm run clean && parcel build src/*.html --public-url ./",
    "test": "jest",
    "lint": "eslint \"src/**/*.{js,jsx}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "format": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florinfire80/WeatherApp.git"
  },
  "keywords": [],
  "author": "florinfire80@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/florinfire80/WeatherApp/issues"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "gsap": "^3.13.0",
    "modern-normalize": "^3.0.1",
    "notiflix": "^3.2.8"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.12.0",
    "@swc/jest": "^0.2.36",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.2.1",
    "events": "^3.3.0",
    "globals": "^16.4.0",
    "https-browserify": "^1.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "parcel": "^2.16.0",
    "parcel-reporter-clean-dist": "^1.0.4",
    "posthtml-include": "^2.0.1",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "util": "^0.12.5"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "overrides": {
    "glob": "^10.4.5",
    "test-exclude": "^7.0.1"
  },
  "type": "module"
}
